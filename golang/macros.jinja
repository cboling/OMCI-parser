{%-macro generate_msgTypes(msgTypes)-%}
    {%-for type in msgTypes%}
			{{ type.name }},
    {%-endfor-%}
{%-endmacro-%}

{% macro attribute_field(size) %}
    {%- if size.octets == 1 -%}
ByteField
    {%- elif size.octets == 2 -%}
Uint16Field
    {%- elif size.octets == 4 -%}
Uint32Field
    {%- elif size.octets == 8 -%}
Uint64Field
    {%- else -%}
UnknownField
    {%- endif -%}
{% endmacro %}


{%-macro access_fields(access)-%}
	{%-for access_type in access-%}
		{% if not loop.first %}|{% endif %}{{access_type.name}}
	{%-endfor-%}
{%-endmacro-%}


{%- macro generate_attributes(attributes) -%}
	{%for attr in attributes%}
			{{loop.index-1}}: {{attribute_field(attr.size)}}("{{attr.name|camelcase}}", 0, {{access_fields(attr.access)}}),
	{%-endfor-%}
{%- endmacro -%}
